<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<presets xmlns="http://josm.openstreetmap.de/tagging-preset-1.0"
    author="slayzex and yalvex"
    shortdescription="UA:Education"
    uk.shortdescription="UA:Освіта"
    description="Preset for educational institutions in Ukraine"
    uk.description="Заготовка для додавання навчальних закладів в Україні"
    link="https://github.com/slayzx/josm_school_ua"
    version="0.44_2021-05-20">

    <!-- Template -->
    <chunk id="name">
        <text key="name"
            text="Name" />
        <text key="name:uk"
            text="Ukrainian name"
            uk.text="Назва українською" />
        <text key="official_name"
            text="Official name" />
        <text key="short_name"
            text="Common name abbreviation" />
    </chunk>
    <chunk id="operator">
        <text key="operator"
            text="Operator" />
        <combo key="operator:type"
            text="Type of operator"
            uk.text="Тип оператора"
            values="public,private,government,consortium"
            uk.display_values="публічний (комунальний),приватний,державний,корпоративний"
            values_sort="false" />
    </chunk>
    <chunk id="name_and_operator">
        <reference ref="name" />
        <reference ref="operator" />
        <reference ref="start_date" />
    </chunk>
    <chunk id="contact">
        <text key="contact:phone"
            text="Phone number, e.g. +380 44 123 4567"
            uk.text="Телефон, наприклад +380 44 123 4567"
            match_expression="phone|'contact:phone'" />
        <text key="contact:email"
            text="Email Address"
            match_expression="email" />
        <text key="contact:website"
            text="Website"
            match_expression="website" />
        <text key="contact:facebook"
            text="Facebook"
            match_expression="facebook" />
    </chunk>
    <chunk id="fee">
        <check key="fee"
            text="Fee"
            value_off=""
            delete_if_empty="true" />
    </chunk>
    <chunk id="capacity">
        <text key="capacity"
            text="Capacity" />
    </chunk>
    <chunk id="start_date">
        <text key="start_date"
            text="Start date"
            uk.text="Рік заснування закладу" />
    </chunk>
    <chunk id="ref_edbo">
        <text key="ref:edbo"
            text="id institution in the EDBO register"
            uk.text="Код закладу в реєстрі ЄДЕБО" />
    </chunk>
    <chunk id="ref_isuo">
        <text key="ref:isuo"
            text="id institution in the ISUO system"
            uk.text="Номер закладу в системі ІСУО" />
    </chunk>
    <chunk id="min_max_age">
        <text key="min_age"
            text="Minimum age" />
        <text key="mах_age"
            text="Maximum age" />
    </chunk>
    <!-- End Template -->

    <group name="UA:Education"
        uk.name="UA:Освіта"
        icon="icons/education.svg">
        <item name="UA:Kindergartens"
            uk.name="Садочки"
            type="node,closedway,multipolygon"
            icon="icons/kindergarten/area.svg"
            preset_name_label="true">
            <link wiki="Uk:Tag:amenity=kindergarten"
                uk.text="Детальніше про теґування дитячих садків" />
            <key key="amenity"
                value="kindergarten" />
            <combo key="amenity"
                uk.text="Тип садочка"
                values="childcare,kindergarten"
                uk.display_values="Ясла,Дитячий садок (Ясла-садок)"
                values_sort="false" />
            <reference ref="name_and_operator" />
            <reference ref="fee" />
            <item_separator />
            <reference ref="contact" />
            <item_separator />
            <reference ref="ref_edbo" />
            <reference ref="ref_isuo" />
            <item_separator />
            <label text="Add additional tags:"
                uk.text="Додати додаткові теґи:" />
            <checkgroup columns="2">
                <check key="nursery"
                    text="Nursery"
                    uk.text="до ясел-садка"
                    value_on="yes"
                    value_off=""
                    delete_if_empty="true" />
                <check key="isced:level"
                    text="Add ISCED level"
                    uk.text="Рівень освіти (ISCED) - 0"
                    value_on="0"
                    value_off=""
                    delete_if_empty="true" />
            </checkgroup>
            <reference ref="capacity" />
            <reference ref="min_max_age" />
        </item> <!-- Kindergartens -->
        <item name="UA:Schools"
            uk.name="Школи"
            type="node,closedway,multipolygon"
            icon="icons/school/area.svg"
            preset_name_label="true">
            <link wiki="Uk:Tag:amenity=school"
                uk.text="Детальніше про теґування шкіл" />
            <key key="amenity"
                value="school" />
            <reference ref="name_and_operator" />
            <reference ref="fee" />
            <item_separator />
            <reference ref="contact" />
            <item_separator />
            <reference ref="ref_edbo" />
            <reference ref="ref_isuo" />
            <item_separator />
            <label text="Use Ctrl or Shift to select multiple values "
                uk.text="Щоб вибрати кілька значень використовуйте Ctrl або Shift" />
            <multiselect key="isced:level"
                text="ISCED level"
                uk.text="Рівень освіти (ISCED)"
                values="0;1;2;3"
                rows="5"
                delete_if_empty="true" />
            <reference ref="capacity" />
            <reference ref="min_max_age" />
        </item> <!-- School -->
        <item name="UA:Higher education"
            uk.name="Вища освіта"
            type="node,closedway,multipolygon"
            icon="icons/university/area.svg"
            preset_name_label="true">
            <link wiki="Uk:Key:isced:level"
                uk.text="Детальніше про рівні освіти ISCED" />
            <link wiki="Uk:Tag:amenity=university"
                uk.text="Детальніше про теґування Вищих навчальних закладів" />
            <key key="amenity"
                value="university" />
            <reference ref="name_and_operator" />
            <item_separator />
            <reference ref="contact" />
            <item_separator />
            <reference ref="ref_edbo" />
            <item_separator />
            <label text="Use Ctrl or Shift to select multiple values "
                uk.text="Щоб вибрати кілька значень використовуйте Ctrl або Shift" />
            <multiselect key="isced:level"
                text="ISCED level"
                uk.text="Рівень освіти (ISCED)"
                values="3;4;5;6;7;8"
                rows="7"
                delete_if_empty="true" />
        </item> <!-- Universities -->

        <!-- OneClick -->
        <group name="OneClick"
            uk.name="OneClick"
            icon="icons/item.svg"
            preset_name_label="true">
            <item name="Childcare"
                uk.name="Ясла"
                type="node,closedway,multipolygon"
                preset_name_label="true"
                icon="icons/circle.svg">
                <key key="amenity"
                    value="school" />
                <key key="isced:level"
                    value="0" />
                <key key="min_age"
                    value="1" />
            </item> <!-- Childcare -->
            <item name="Nursery"
                uk.name="Ясла-садок"
                type="node,closedway,multipolygon"
                preset_name_label="true"
                icon="icons/circle-2.svg">
                <key key="amenity"
                    value="kindergarten" />
                <key key="nursery"
                    value="yes" />
                <key key="isced:level"
                    value="0" />
                <key key="min_age"
                    value="1" />
            </item> <!-- Nursery -->
            <item name="Kindergarten"
                uk.name="Дитячий садок"
                type="node,closedway,multipolygon"
                preset_name_label="true"
                icon="icons/circle.svg">
                <key key="amenity"
                    value="kindergarten" />
                <key key="isced:level"
                    value="0" />
                <key key="min_age"
                    value="3" />
            </item> <!-- Kindergarten -->
            <separator />
            <separator />
            <item name="NVK (І-ІІ)"
                uk.name="НВК (І-ІІ ступенів)"
                type="node,closedway,multipolygon"
                preset_name_label="true"
                icon="icons/circle-2.svg">
                <key key="amenity"
                    value="school" />
                <key key="isced:level"
                    value="0;1;2" />
                <key key="min_age"
                    value="3" />
            </item> <!-- NVK_1 -->
            <item name="NVK (І-ІІІ)"
                uk.name="НВК (І-ІІІ ступенів)"
                type="node,closedway,multipolygon"
                preset_name_label="true"
                icon="icons/circle-2.svg">
                <key key="amenity"
                    value="school" />
                <key key="isced:level"
                    value="0;1;2;3" />
                <key key="min_age"
                    value="3" />
            </item> <!-- NVK_2 -->
            <separator />
            <item name="School (І-ІІ)"
                uk.name="Школи (І-ІІ ступенів)"
                type="node,closedway,multipolygon"
                preset_name_label="true"
                icon="icons/circle.svg">
                <key key="amenity"
                    value="school" />
                <key key="isced:level"
                    value="1;2" />
            </item> <!-- School_1 -->
            <item name="School (І-ІІІ)"
                uk.name="Школи (І-ІІІ ступенів)"
                type="node,closedway,multipolygon"
                preset_name_label="true"
                icon="icons/circle.svg">
                <key key="amenity"
                    value="school" />
                <key key="isced:level"
                    value="1;2;3" />
            </item> <!-- School_2 -->
            <separator />
            <separator />
        </group> <!-- OneClick -->
    </group> <!-- UA:Education -->
</presets>
