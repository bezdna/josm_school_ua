<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<presets xmlns="http://josm.openstreetmap.de/tagging-preset-1.0"
    author=""
    shortdescription="UA:Education"
    uk.shortdescription="UA:Освіта"
    description="Preset for educational institutions in Ukraine"
    uk.description="Заготовки для додавання навчальних закладів в Україні"
    version="0.22_2021-04-29">

    <!-- Template -->
    <chunk id="name">
        <text key="name"
            text="Name" />
        <text key="name:uk"
            text="Ukrainian name"
            uk.text="Назва українською" />
        <text key="official_name"
            text="Official name" />
        <text key="short_name"
            text="Common name abbreviation" />
    </chunk>
    <chunk id="operator">
        <text key="operator"
            text="Operator" />
        <combo key="operator:type"
            text="Type of operator"
            uk.text="Тип оператора"
            values="public,private,government"
            uk.display_values="публічна (комунальна),приватна,державна"
            values_sort="false" />
    </chunk>
    <chunk id="contact">
        <text key="contact:phone"
            text="Phone number, e.g. +380 44 123 4567"
            uk.text="Телефон, наприклад +380 44 123 4567"
            match_expression="phone|'contact:phone'" />
        <text key="contact:email"
            text="Email Address"
            match_expression="email" />
        <text key="contact:website"
            text="Website"
            match_expression="website" />
        <text key="contact:facebook"
            text="Facebook"
            match_expression="facebook" />
    </chunk>
    <chunk id="fee">
        <check key="fee"
            text="Fee"
            default="off"
            delete_if_empty="true" />
    </chunk>
    <chunk id="capacity">
        <text key="capacity"
            text="Capacity" />
    </chunk>
    <chunk id="ref_edbo">
        <text key="ref:edbo"
            text="id institution in the EDBO register"
            uk.text="Код закладу в реєстрі ЄДЕБО" />
    </chunk>
    <chunk id="ref_isuo">
        <text key="ref:isuo"
            text="id institution in the ISUO system"
            uk.text="Номер закладу в системі ІСУО" />
    </chunk>
    <chunk id="ages">
        <text key="min_age"
            text="Minimum age" />
        <text key="mах_age"
            text="Maximum age" />
    </chunk>
    <!-- End Template -->

    <group name="UA:Education"
        uk.name="UA:Освіта"
        icon="icons/education.svg">
        <group name="UA:Schools"
            uk.name="Школи"
            icon="icons/school/group.svg">
            <item name="School territory"
                uk.name="Територія школи"
                type="node,closedway,multipolygon"
                icon="icons/school/area.svg"
                preset_name_label="true">
                <link wiki="Uk:Tag:amenity=school"
                    uk.text="Детальніше про теґування шкіл" />
                <key key="amenity"
                    value="school" />
                <reference ref="name" />
                <reference ref="operator" />
                <reference ref="fee" />
                <item_separator />
                <reference ref="contact" />
                <item_separator />
                <reference ref="ref_edbo" />
                <reference ref="ref_isuo" />
                <item_separator />
                <label text="Use Ctrl or Shift to select multiple values "
                    uk.text="Щоб вибрати кілька значень використовуйте Ctrl або Shift" />
                <multiselect key="isced:level"
                    text="ISCED level"
                    uk.text="Рівень освіти (ISCED)"
                    values="0;1;2;3"
                    rows="5"
                    delete_if_empty="true" />
                <reference ref="capacity" />
                <reference ref="ages" />
            </item> <!-- School territory -->
            <group name="Territory of the ..."
                uk.name="Територія ..."
                icon="icons/school/item.svg"
                preset_name_label="true">
                <item name="NVK (І-ІІ)"
                    uk.name="НВК (І-ІІ ступенів)"
                    type="node,closedway,multipolygon"
                    preset_name_label="true"
                    icon="icons/circle-2.svg">
                    <key key="amenity"
                        value="school" />
                    <key key="isced:level"
                        value="0;1;2" />
                    <key key="min_age"
                        value="3" />
                </item> <!-- NVK_1 territory -->
                <item name="NVK (І-ІІІ)"
                    uk.name="НВК (І-ІІІ ступенів)"
                    type="node,closedway,multipolygon"
                    preset_name_label="true"
                    icon="icons/circle-2.svg">
                    <key key="amenity"
                        value="school" />
                    <key key="isced:level"
                        value="0;1;2;3" />
                    <key key="min_age"
                        value="3" />
                </item> <!-- NVK_2 territory -->
                <separator />
                <item name="School (І-ІІ)"
                    uk.name="Школи (І-ІІ ступенів)"
                    type="node,closedway,multipolygon"
                    preset_name_label="true"
                    icon="icons/circle.svg">
                    <key key="amenity"
                        value="school" />
                    <key key="isced:level"
                        value="1;2" />
                </item> <!-- School_1 territory -->
                <item name="School (І-ІІІ)"
                    uk.name="Школи (І-ІІІ ступенів)"
                    type="node,closedway,multipolygon"
                    preset_name_label="true"
                    icon="icons/circle.svg">
                    <key key="amenity"
                        value="school" />
                    <key key="isced:level"
                        value="1;2;3" />
                </item> <!-- School_2 territory -->
            </group> <!-- One click territory-->
        </group> <!-- UA:School -->
    </group> <!-- UA:Education -->
</presets>